{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "CustomerName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 24,
      "defaultValue": "",
      "metadata": {
        "description": "The customer name"
      }
    } 
  },
  "variables": {
    "DNSZoneName": "signupsaasservices.dev.addlevel.net"
  },
  "resources": [
    {
      "type": "Microsoft.Network/dnszones/CNAME",
      "name": "[concat(variables('DNSZoneName'), '/', parameters('CustomerName'))]",
      "apiVersion": "2016-04-01",
      "location": "global",
      "dependsOn": [],
      "tags": {
        "displayName": "DnsRecordSet"
      },
      "properties": {
        "TTL": 3600,
        "CNAMERecord": {
          "cname": "[concat(parameters('CustomerName'), '.azurewebsites.net')]"
        }
      }
    }
  ]
}