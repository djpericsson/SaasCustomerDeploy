{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "CustomerName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 24,
      "defaultValue": "",
      "metadata": {
        "description": "The customer name"
      }
    }
  },
  "variables": {
    "StorageAccountName": "[tolower(parameters('CustomerName'))]",
    "DNSZoneName": "[tolower(concat(resourceGroup().name, '.signupsaasservices.dev.addlevel.net'))]"
  },
  "resources": [
    {
      "name": "[variables('StorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('StorageAccountType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "StorageAccount",
        "Customer": "[parameters('CustomerName')]",
        "Solution": "Exflow"
      },
      "kind": "Storage"
    },
    {
      "type": "Microsoft.Network/dnszones",
      "name": "signup-xfw-prod-rg.dev.addlevel.net",
      "apiVersion": "2015-05-04-preview",
      "location": "global",
      "properties": {}
    },    
    {
      "type": "Microsoft.Network/dnszones/CNAME",
      "name": "[concat(variables('DNSZoneName'), '/', tolower(parameters('CustomerName')))]",
      "apiVersion": "2016-04-01",
      "location": "global",
      "dependsOn": [
        "Microsoft.Network/dnszones/signup-xfw-prod-rg.dev.addlevel.net"
      ],
      "tags": {
        "displayName": "DnsRecordSet"
      },
      "properties": {
        "TTL": 3600,
        "CNAMERecord": {
          "cname": "[tolower(concat(parameters('CustomerName'), '.', 'signup-xfw-prod-rg.dev.addlevel.net'))]"
        }
      }
    }
  ],
  "outputs": {
    "StorageAccountName": {
      "type": "string",
      "value": "[parameters('CustomerName')]"
    },
    "DnsRecordSet": {
      "type": "string",
      "value": "[tolower(concat(parameters('CustomerName'), '.', 'signup-xfw-prod-rg.dev.addlevel.net'))]"
    }
  }
}
