{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "CustomerName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 24,
            "defaultValue": "",
            "metadata": {
                "description": "The customer name. Only A to Z characters and numbers are valid."
            }
        },
        "SaasResourceGroup": {
            "type": "string",
            "defaultValue": "SignUp-SAAS-Services",
            "metadata": {
                "description": "The Saas Service Resource Group name."
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": ["Free", "Shared", "Basic", "Standard"],
            "defaultValue": "Free"
        }      
    },
    "variables": {
        "StorageAccountType": "Standard_LRS",
        "TrimName": "[trim(parameters('CustomerName'))]",
        "ReplaceName": "[replace(variables('TrimName'),' ', '')]",
        "ConcatName": "[concat(variables('ReplaceName'), uniqueString(parameters('CustomerName')))]",
        "CustomerName": "[substring(variables('ConcatName'), 0, 19)]",
        "ResourceGroup": "[resourceGroup().name]",
        "TolowerResourceGroup": "[tolower(variables('ResourceGroup'))]",
        "ReplaceDashResourceGroup": "[replace(variables('TolowerResourceGroup'),'-', '')]",
        "ConcatResourceGroup": "[concat(variables('ReplaceDashResourceGroup'), uniqueString(variables('ReplaceDashResourceGroup')))]",
        "AppServicePlan": "[substring(variables('ConcatResourceGroup'), 0, 19)]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "nestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('ResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":
                        "https://raw.githubusercontent.com/djpericsson/SaasCustomerDeploy/master/customerDeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "CustomerName": { "value": "[variables('CustomerName')]" },
                    "StorageAccountType": { "value": "[variables('StorageAccountType')]" },
                    "Tag": { "value": "[variables('TrimName')]" },
                    "AppServicePlan": { "value": "[variables('AppServicePlan')]" }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "nestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('SaaSResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/djpericsson/SaasCustomerDeploy/master/dnsRecordSet.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "CustomerName": { "value": "[variables('ReplaceName')]" },
                    "CNAME": { "value": "[variables('CustomerName')]" },
                    "DNSZoneName": { "value": "dev.addlevel.net" }
                }
            }
        }
    ]
}
