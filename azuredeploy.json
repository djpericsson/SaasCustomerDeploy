{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "CustomerName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 24,
      "defaultValue": "",
      "metadata": {
        "description": "The customer name"
      }
    } 
  },
  "variables": {
    "DNSZoneName": "signupsaasservices.dev.addlevel.net"
  },
  "resources": [
    {
      "name": "[tolower(parameters('CustomerName'))]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('StorageAccountType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "StorageAccount",
        "Customer": "[parameters('CustomerName')]",
        "Solution": "Exflow"
      },
      "kind": "Storage"
    },  
    {
      "type": "Microsoft.Network/dnszones/CNAME",
      "name": "[concat(variables('DNSZoneName'), '/', parameters('CustomerName'))]",
      "apiVersion": "2016-04-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "tags": {
        "displayName": "DnsRecordSet"
      },
      "properties": {
        "TTL": 3600,
        "CNAMERecord": {
          "cname": "[concat('test.', parameters('CustomerName'), '.', variables('DNSZoneName'))]"
        }
      }
    }
  ]
}